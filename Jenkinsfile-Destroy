pipeline {
  agent any

  stages {

    stage('DB') {
      steps {
        dir('DB') {
          git branch: 'master', url: 'https://github.com/priyankapeelu/terraform-databases.git'
          sh '''
            terrafile -f env-dev/Terrafile
            terraform init -backend-config=env-dev/dev-backend.tfvars
            terraform destroy -var-file=env-dev/dev.tfvars -auto-approve
          '''
        }
      }
    }
    stage('ALB') {
          steps {
            dir('ALB') {
              git branch: 'master', url: 'https://github.com/priyankapeelu/terraform-loadbalancers.git'
              sh '''
                terrafile -f env-dev/Terrafile
                terraform init -backend-config=env-dev/dev-backend.tfvars
                terraform destroy -var-file=env-dev/dev.tfvars -auto-approve
              '''
            }
          }
         }
  }

}
